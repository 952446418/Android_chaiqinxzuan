<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SearchActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_low">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_medicinename"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="输入饮片名称"
                android:layout_gravity="center"
                android:padding="5sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_low"
                android:layout_marginStart="20dp" />
            <Button
                android:id="@+id/btn_searchmedicine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="查      询"
                android:layout_gravity="center"
                android:background="@drawable/bg_username"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="剩余饮片量:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/tv_Totalnumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_low"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="拟定单价:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/et_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_gravity="center"
                android:digits="0123456789."
                android:padding="5sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                android:layout_marginStart="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="新增饮片量:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/et_addnumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_gravity="center"
                android:digits="0123456789."
                android:padding="5sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="最低库存:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/et_min"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_gravity="center"
                android:digits="0123456789."
                android:padding="5sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                android:layout_marginStart="40dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_changemedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修      改"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_username" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_low">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_customername"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="输入用户名字"
                android:layout_gravity="center"
                android:padding="5sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_low"
                android:layout_marginStart="20dp" />
            <Button
                android:id="@+id/btn_searchcustomer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="查      询"
                android:layout_gravity="center"
                android:background="@drawable/bg_username"
                android:layout_marginStart="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="电话号码:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:inputType="phone"
                android:layout_gravity="center"
                android:padding="5sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                android:layout_marginStart="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="备注:"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/et_Other"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:padding="5sp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                android:layout_marginStart="80dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_changecustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修      改"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_username" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>